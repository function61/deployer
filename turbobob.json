{
	"for_description_of_this_file_see": "https://github.com/function61/turbobob",
	"version_major": 1,
	"project_name": "deployer",
	"builders": [
		{
			"name": "default",
			"uses": "docker://fn61/buildkit-golang:20200101_1326_bf030ba8",
			"mount_source": "",
			"mount_destination": "/go/src/github.com/function61/deployer",
			"workdir": "/go/src/github.com/function61/deployer",
			"commands": {
				"build": ["bin/build.sh"],
				"dev": ["bash"]
			}
		},
		{
			"name": "publisher",
			"uses": "docker://fn61/buildkit-publisher:20190206_1058_d35b3939",
			"mount_destination": "/workspace",
			"commands": {
				"publish": ["publish.sh", "rel/*"],
				"dev": ["bash"]
			},
			"env": {
				"BINTRAY_PROJECT": "function61/dl/deployer"
			},
			"pass_envs": [
				"BINTRAY_CREDS"
			]
		}
	],
	"os_arches": {
		"linux-amd64": true
	}
}
